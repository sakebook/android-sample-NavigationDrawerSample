<resources>

    <style name="BaseTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <item name="colorPrimary">#ff1188</item>
        <item name="colorPrimaryDark">#00dd99</item>
        <item name="colorAccent">#6600aa</item>
    </style>

    <style name="Theme.Mail" parent="BaseTheme">
        <item name="windowActionModeOverlay">true</item>
    </style>

    <style name="Theme.Movie" parent="BaseTheme">
    </style>

    <style name="Theme.Photo" parent="BaseTheme">
    </style>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@android:color/white</item>
    </style>

</resources>
