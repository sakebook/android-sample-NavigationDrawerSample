<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.sakebook.android.sample.navigationdrawersample" >

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/BaseTheme" >
        <activity
            android:name=".ui.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.GooglePhotoActivity"
            android:label="@string/title_activity_google_photo"
            android:theme="@style/Theme.Photo" >
        </activity>
        <activity
            android:name=".ui.GoogleMusicActivity"
            android:label="@string/title_activity_google_music"
            android:theme="@style/Theme.Music" >
        </activity>
        <activity
            android:name=".ui.GoogleMailActivity"
            android:label="@string/title_activity_google_mail"
            android:theme="@style/Theme.Mail" >
        </activity>
    </application>

</manifest>
